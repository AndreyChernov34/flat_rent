<?xml version="1.0" encoding="UTF-8" ?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.4.xsd">
    <changeSet id="4" author="AndreyChernov">
        <createTable tableName="booking">
            <column name="id" type="serial">
                <constraints primaryKey="true" primaryKeyName="booking_id_pk"/>
            </column>
            <column name="start_date" type="date">
                <constraints nullable="false"/>
            </column>
            <column name="end_date" type="date">
                <constraints nullable="false"/>
            </column>
            <column name="idClient" type="integer">
                <constraints foreignKeyName="fk_client_id" referencedTableName="clent" referencedColumnNames="id"/>
            </column>
            <column name="idAdvert" type="integer">
                <constraints foreignKeyName="fk_advert_id" referencedTableName="advert" referencedColumnNames="id"/>
            </column>
            <column name="amount" type="numeric(10,2">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>
    